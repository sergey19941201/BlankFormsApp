<?xml version="1.0" encoding="UTF-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlankFormsApp.Pages.AbsoluteLayoutXamlPage">
    <AbsoluteLayout>
        <BoxView
            Color="Orange"
            AbsoluteLayout.LayoutBounds="0, 0, 40, 0.4"
            AbsoluteLayout.LayoutFlags="PositionProportional, HeightProportional" />
        <BoxView
            Color="Black"
            AbsoluteLayout.LayoutBounds="1, 0, 40, 40"
            AbsoluteLayout.LayoutFlags="PositionProportional" />
        <BoxView
            Color="Red"
            AbsoluteLayout.LayoutBounds=".1, .2, 50, 80"
            AbsoluteLayout.LayoutFlags="PositionProportional" />
        <BoxView
            AbsoluteLayout.LayoutBounds="0.5,0.5,.33,100"
            AbsoluteLayout.LayoutFlags="XProportional,YProportional,WidthProportional"
            BackgroundColor="Gray" />
        <BoxView
            Color="Blue"
            AbsoluteLayout.LayoutBounds=".4, .8, .2, .2"
            AbsoluteLayout.LayoutFlags="All" />
        <BoxView
            Color="DarkKhaki"
            AbsoluteLayout.LayoutBounds="1, 1, 80, 80"
            AbsoluteLayout.LayoutFlags="PositionProportional" />
    </AbsoluteLayout>
</ContentPage>